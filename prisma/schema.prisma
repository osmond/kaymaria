datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Plant {
  id             String   @id @default(cuid())
  name           String
  species        String?
  lastWatered    DateTime?
  nextWater      DateTime?
  lastFertilized DateTime?
  nextFertilize  DateTime?
  waterIntervalDays     Int?
  fertilizeIntervalDays Int?
  tasks          Task[]
}

model Task {
  id        String   @id @default(cuid())
  title     String
  due       DateTime
  completed Boolean  @default(false)
  type      String?
  notes     String?
  plant     Plant    @relation(fields: [plantId], references: [id])
  plantId   String
}
